{
  "name": "simeongriggs.dev-remix",
  "description": "",
  "license": "UNLICENSED",
  "scripts": {
    "build": "concurrently \"npm:build:*\"",
    "build:remix": "remix build",
    "build:css": "tailwindcss -i ./styles/global.css -o ./app/styles/global.css --minify",
    "dev": "concurrently \"npm:dev:*\" --kill-others",
    "dev:remix": "remix dev",
    "dev:css": "tailwindcss -i ./styles/global.css -o ./app/styles/global.css --watch",
    "postinstall": "remix setup node",
    "deploy": "npm run build && flyctl deploy",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@remix-run/react": "^1.0.3",
    "@remix-run/serve": "^1.0.3",
    "@sanity/block-content-to-react": "^3.0.0",
    "@sanity/groq-store": "^0.2.2",
    "@sanity/image-url": "^1.0.1",
    "@tailwindcss/aspect-ratio": "^0.3.0",
    "@tailwindcss/typography": "^0.4.1",
    "blurhash": "^1.1.4",
    "concurrently": "^6.4.0",
    "dotenv": "^10.0.0",
    "framer-motion": "^5.3.1",
    "get-youtube-id": "^1.0.1",
    "picosanity": "^3.0.2",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.2",
    "react-blurhash": "^0.1.3",
    "react-dom": "^17.0.2",
    "react-router-dom": "6.0.2",
    "react-use-cookie": "^1.2.1",
    "remix": "^1.0.3",
    "tailwindcss-fraction-widths": "^0.0.3",
    "usehooks-ts": "^2.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.0.3",
    "@types/react": "^17.0.36",
    "@types/react-dom": "^17.0.11",
    "esbuild": "^0.13.15",
    "miniflare": "^1.4.1",
    "postcss": "^8.3.11",
    "postcss-cli": "^9.0.2",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
